@model ErrorViewModel
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="text-danger">@Localizer["PageTitle"].</h1>
<h2 class="text-danger">@Localizer["GenericRequestErrorMessage"]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@Localizer["RequestId"]:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@Localizer["TitleDevelopmentMode"]</h3>
<p>
    @Localizer["HTML_SwapToDevelopmentForMoreDetails"]
</p>
<p>
    @Localizer["HTML_SwapToDevelopmentForMoreDetailsDescription"]
</p>
