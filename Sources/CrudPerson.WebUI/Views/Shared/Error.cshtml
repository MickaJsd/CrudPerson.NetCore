@model ErrorViewModel
@{
    ViewData["Title"] = Localizer["PageTitle"];

    string resourceKeySuffix = Model.StatusCodeIsSupported ? Model.StatusCode.ToString() : string.Empty;
}

@if (Model.StatusCodeIsSupported)
{
    <h1 class="text-danger">@Model.StatusCode.ToString()</h1>
}

<h1 class="text-danger">@Localizer[$"PageTitle{resourceKeySuffix}"].</h1>
<h2 class="text-danger">@Localizer[$"RequestErrorMessage{resourceKeySuffix}"]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@SharedLocalizer["ErrorRequestId"]:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@Localizer["TitleDevelopmentMode"]</h3>
<p>
    @Localizer["HTML_SwapToDevelopmentForMoreDetails"]
</p>
<p>
    @Localizer["HTML_SwapToDevelopmentForMoreDetailsDescription"]
</p>
